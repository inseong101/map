{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "**", "destination": "/index.html" }
    ],
    "headers": [
      {
        "source": "/map/*.json",
        "headers": [{ "key": "Cache-Control", "value": "no-store" }]
      }
    ]
  }
}
